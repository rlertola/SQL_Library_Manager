extends layout

block content
  div
    p
      a(class="libraryTitle" href="/")= libraryTitle
    p
      include search
    p
      a(href="/books/new") Create New Book
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody
        each book in books
          tr
            td
              a(href='/books/' + book.id)= book.title
            td= book.author
            td= book.genre
            td= book.year
    //- Append page links.
    ul(class='pageLinks')
      - let n = 1
      while n <= numberOfPages
        a(href="/books/page/" + n)= n++ + ' '

